@model BranchVM
@{
}
<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Forms</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="~/#">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="~/#">Merchant</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="~/#">Add Merchant</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <form asp-action="CreateBranch" method="post">
                        <div class="card-header">
                            <div class="card-title">Add Branch</div>
                        </div>
                        <div class="card-body">
                            <div asp-validation-for="Name" class="text-danger"></div>
                            <div class="form-group form-inline">
                                <label asp-for="Name"
                                       class="col-md-3 col-form-label">Enter branch's name</label>
                                <div class="col-md-9 p-0">
                                    <input asp-for="Name"
                                           type="text"
                                           class="form-control input-full"
                                           placeholder="Branch's name" />
                                </div>
                                <span asp-validation-for="Name" class="text-danger" ></span>
                            </div>
                            <div asp-validation-for="MerchantId" class="text-danger"></div>
                            <div class="form-group form-inline">
                                <label asp-for="MerchantId"
                                       class="col-md-3 col-form-label">Select merchant</label>
                                <div class="col-md-9 p-0">
                                    <select class="form-select"
                                            asp-for="MerchantId"
                                            asp-items="@Model.Merchants">
                                        <option value="" hidden>-- Select Merchant --</option>
                                    </select>
                                    <span asp-validation-for="MerchantId" class="text-danger"></span>
                                </div>
                                
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-success">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

